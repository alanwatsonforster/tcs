case $(hostname | sed 's/\..*//') in
transientsoan-nas)
  archivedir=/mnt/volume/archive-ratir
  ;;
*)
  archivedir=/mnt/storage/archive
  ;;
esac

mkdir -p $archivedir/proposal/
cd $archivedir/date/
for date in */
do
  cd $archivedir/date/$date
  find . -print | cpio -pdl --quiet $archivedir/proposal/
done

mkdir -p $archivedir/public
cd $archivedir/proposal/
(
  find . -name "*.fits.txt" -print 
  find . -path "./2012A-0???/*" -name "*.fits.bz2" -print
  find . -name "2012*.fits.bz2" -print
  find . -name "2013*.fits.bz2" -print
  find . -name "20140[1234]*.fits.bz2" -print
) | 
sort -u |
grep -v 2015B-1006 |
cpio -pdl --quiet $archivedir/public

cd $archivedir/proposal/
for proposal in *-[123456789]*
do
  cd $archivedir/proposal/$proposal
  find . -print | cpio -pdl --quiet $archivedir/pi/$proposal/$proposal
done
