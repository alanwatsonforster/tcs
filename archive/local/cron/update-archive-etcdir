case $(hostname | sed 's/\..*//') in
transientsoan-nas)
  archivedir=/mnt/volume/archive-ratir
  ;;
*)
  archivedir=/mnt/storage/archive
  ;;
esac

etcdir=/usr/local/etc

mkdir -p $archivedir/etc

sed "
  s:$archivedir:%archivedir%:g
  s:$etcdir:%etcdir%:g
  /# start of prolog/,/# end of prolog/d
" $etcdir/rsyncd.conf >$archivedir/etc/rsyncd.conf-tmp

install -CpS -o archive -g archive -m 0644 $archivedir/etc/rsyncd.conf-tmp $archivedir/etc/rsyncd.conf
install -CpS -o archive -g archive -m 0600 $etcdir/rsyncd.secrets          $archivedir/etc/rsyncd.secrets

rm -f $archivedir/etc/rsyncd.conf-tmp
