case $(hostname | sed 's/\..*//') in
transientsoan-nas)
  archivedir=/mnt/volume/archive-ratir
  ;;
*)
  archivedir=/mnt/storage/archive
  ;;
esac

proposalidentifiers_csv=/mnt/storage/local/etc/proposalidentifiers.csv

mkdir -p $archivedir/public/
cd $archivedir/public/

export LC_CTYPE=en_US.UTF-8

cp $proposalidentifiers_csv proposalidentifiers.csv-$$-tmp

awk -F, '
{
  printf("%s %5s %-30s %s\n", $1, $2, $3, $4);
}
' proposalidentifiers.csv-$$-tmp >proposalidentifiers.txt-$$-tmp

install -CpS  proposalidentifiers.csv-$$-tmp proposalidentifiers.csv
install -CpS  proposalidentifiers.txt-$$-tmp proposalidentifiers.txt

rm -f proposalidentifiers.*-tmp
