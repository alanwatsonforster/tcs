#\
umask 0; PATH=/usr/local/opt/tcl-tk/bin:$PATH exec tclsh8.6 -encoding "utf-8" "$0" ${1+"$@"}

source [file join [file dirname [info script]] ".." "lib" "tcs" "packages.tcl"]

package require "server"
server::start {

  config::setdefaultvalue "nefinder" "telescopedescription"        "NE C8-A XLT Finder"
  config::setdefaultvalue "nefinder" "detectortype"                "fli"
  config::setdefaultvalue "nefinder" "detectoridentifier"          "ML0503709"
  config::setdefaultvalue "nefinder" "detectorwidth"                0.68d
  config::setdefaultvalue "nefinder" "detectorinitialreadmode"     "5 MHz"
  config::setdefaultvalue "nefinder" "detectorinitialsoftwaregain" 8
  config::setdefaultvalue "nefinder" "detectorinitialbinning"      2
  config::setdefaultvalue "nefinder" "detectorunbinnedformat"      { sx 46 sy 34 nx 2184 ny 1472 }
  config::setdefaultvalue "nefinder" "coolersettemperature"        -30
  config::setdefaultvalue "nefinder" "filterwheeltype"             "null"
  config::setdefaultvalue "nefinder" "filterwheelidentifier"       "null"
  config::setdefaultvalue "nefinder" "filterwheelinitialposition"  0
  config::setdefaultvalue "nefinder" "focusertype"                 "fli"
  config::setdefaultvalue "nefinder" "focuseridentifier"           "DF0101910"
  config::setdefaultvalue "nefinder" "focuserinitialposition"      1000
  config::setdefaultvalue "nefinder" "defaultfocusexposuretime"    1.0
  config::setdefaultvalue "nefinder" "defaultfocusrange"           600
  config::setdefaultvalue "nefinder" "defaultfocusstep"            25
  config::setdefaultvalue "nefinder" "pointingmodelparameters"     {}
  config::setdefaultvalue "nefinder" "isstandalone"                false

  config::setdefaultvalue "finder" "identifier"                  "nefinder"
  config::setdefaultvalue "finder" "serverport"                  [config::getvalue nefinderserverport                 ]
  config::setdefaultvalue "finder" "serveraddr"                  [config::getvalue nefinderserveraddr                 ]
  config::setdefaultvalue "finder" "telescopedescription"        [config::getvalue nefindertelescopedescription       ]  
  config::setdefaultvalue "finder" "detectortype"                [config::getvalue nefinderdetectortype               ]
  config::setdefaultvalue "finder" "detectoridentifier"          [config::getvalue nefinderdetectoridentifier         ]
  config::setdefaultvalue "finder" "detectorwidth"               [config::getvalue nefinderdetectorwidth              ]
  config::setdefaultvalue "finder" "detectorinitialreadmode"     [config::getvalue nefinderdetectorinitialreadmode    ]
  config::setdefaultvalue "finder" "detectorinitialsoftwaregain" [config::getvalue nefinderdetectorinitialsoftwaregain]
  config::setdefaultvalue "finder" "detectorinitialbinning"      [config::getvalue nefinderdetectorinitialbinning     ]
  config::setdefaultvalue "finder" "detectorunbinnedformat"      [config::getvalue nefinderdetectorunbinnedformat     ]
  config::setdefaultvalue "finder" "coolersettemperature"        [config::getvalue nefindercoolersettemperature       ]
  config::setdefaultvalue "finder" "filterwheeltype"             [config::getvalue nefinderfilterwheeltype            ]
  config::setdefaultvalue "finder" "filterwheelidentifier"       [config::getvalue nefinderfilterwheelidentifier      ]
  config::setdefaultvalue "finder" "filterwheelinitialposition"  [config::getvalue nefinderfilterwheelinitialposition ]
  config::setdefaultvalue "finder" "focusertype"                 [config::getvalue nefinderfocusertype                ]
  config::setdefaultvalue "finder" "focuseridentifier"           [config::getvalue nefinderfocuseridentifier          ]
  config::setdefaultvalue "finder" "focuserinitialposition"      [config::getvalue nefinderfocuserinitialposition     ]
  config::setdefaultvalue "finder" "defaultfocusexposuretime"    [config::getvalue nefinderdefaultfocusexposuretime   ]
  config::setdefaultvalue "finder" "defaultfocusrange"           [config::getvalue nefinderdefaultfocusrange          ]
  config::setdefaultvalue "finder" "defaultfocusstep"            [config::getvalue nefinderdefaultfocusstep           ]
  config::setdefaultvalue "finder" "pointingmodelparameters"     [config::getvalue nefinderpointingmodelparameters    ]
  config::setdefaultvalue "finder" "isstandalone"                [config::getvalue nefinderisstandalone               ]

  package require finderserver
  finderserver::start
}
