program=$(basename "$0")

host=$(uname -n | sed 's/\..*//' | tr '[A-Z]' '[a-z]')
case "$host" in
coatlioan-access)
  user=coatli
  hosts="services control c0 d0 f0 f1"
  ;;
ddotioan-access)
  user=ddoti
  hosts="services control c0 d0 d1 d2 d3 e0 e1 e2 e3"
  ;;
*)
  echo 1>&2 "error: $program: unrecognized host: $host"
  exit
esac

for host in $hosts
do
  echo "$program: attempting to copy ssh id to $user@$host."
  ssh-copy-id $user@$host
  echo "$program: done."
done

