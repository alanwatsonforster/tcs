export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

program=$(basename "$0")

usageerror () {
  echo 1>&2 "usage: $program [--] [fitsfile ...]"
  exit 1
}

optstring=""
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  *)
    usageerror
    ;;
  esac
done
shift
case $# in
0)
  set -- "/dev/stdin"
  ;;
esac

for file in "$@"
do
  case $file in 
  *.bz2)
    bunzip2 -c -- "$file"
    ;;
  *.gz)
    gunzip -c -- "$file"
    ;;
  *)
    cat -- "$file"
    ;;
  esac |
  fold -80 2>&- | sed '/^END /q'
done

exit 0
