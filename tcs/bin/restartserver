export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

program=$(basename "$0")

usageerror () {
  echo 1>&2 "usage: $program [--] servername [...]"
  echo 1>&2 "usage: $program [-d] [--] servername"
  echo 1>&2 "usage: $program [-a] [--]"
  exit 1
}

optstring=ad
all=false
debug=false
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -q -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -a)
    all=true
    shift 1
    ;;
  -d)
    debug=true
    shift 1
    ;;
  *)
    usageerror
    ;;
  esac
done
shift

if $all && $debug
then
  usageerror
elif $all && test $# != 0
then
  usageerror
elif ! $all && test $# = 0
then
  usageerror
elif $debug && test $# != 1
then
  usageerror
fi

if $all
then
  stopserver -a
  startserver -a
elif $debug
then
  stopserver -- "$@"
  startserver -d -- "$@"
else
  stopserver -- "$@"
  startserver -- "$@"
fi

exit 0
