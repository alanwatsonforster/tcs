#\
umask 0; PATH=/usr/local/opt/tcl-tk/bin:$PATH exec tclsh8.6 -encoding "utf-8" "$0" ${1+"$@"}

source [file join [file dirname [info script]] ".." "lib" "tcs" "packages.tcl"]

package require "server"
server::start {

  config::setdefaultvalue "nwfinder" "telescopedescription"        "NW Blue Finder"
  config::setdefaultvalue "nwfinder" "detectortype"                "qsi"
  config::setdefaultvalue "nwfinder" "detectoridentifier"          502146
  config::setdefaultvalue "nwfinder" "detectorwidth"               0.27d
  config::setdefaultvalue "nwfinder" "detectorinitialreadmode"     ""
  config::setdefaultvalue "nwfinder" "detectorinitialsoftwaregain" 2
  config::setdefaultvalue "nwfinder" "detectorinitialbinning"      1
  config::setdefaultvalue "nwfinder" "detectorunbinnedformat"      { sx 0 sy 0 nx 768 ny 512 }
  config::setdefaultvalue "nwfinder" "coolersettemperature"        -15
  config::setdefaultvalue "nwfinder" "filterwheeltype"             "qsi"
  config::setdefaultvalue "nwfinder" "filterwheelidentifier"       "internal"
  config::setdefaultvalue "nwfinder" "filterwheelinitialposition"  1
  config::setdefaultvalue "nwfinder" "focusertype"                 "null"
  config::setdefaultvalue "nwfinder" "focuseridentifier"           "null"
  config::setdefaultvalue "nwfinder" "focuserinitialposition"      0
  config::setdefaultvalue "nwfinder" "pointingmodelparameters"     {}
  config::setdefaultvalue "nwfinder" "isstandalone"                false

  config::setdefaultvalue "finder" "identifier"                  "nwfinder"
  config::setdefaultvalue "finder" "serverport"                  [config::getvalue nwfinderserverport                 ]
  config::setdefaultvalue "finder" "serveraddr"                  [config::getvalue nwfinderserveraddr                 ]
  config::setdefaultvalue "finder" "telescopedescription"        [config::getvalue nwfindertelescopedescription       ]  
  config::setdefaultvalue "finder" "detectortype"                [config::getvalue nwfinderdetectortype               ]
  config::setdefaultvalue "finder" "detectoridentifier"          [config::getvalue nwfinderdetectoridentifier         ]
  config::setdefaultvalue "finder" "detectorwidth"               [config::getvalue nwfinderdetectorwidth              ]
  config::setdefaultvalue "finder" "detectorinitialreadmode"     [config::getvalue nwfinderdetectorinitialreadmode    ]
  config::setdefaultvalue "finder" "detectorinitialsoftwaregain" [config::getvalue nwfinderdetectorinitialsoftwaregain]
  config::setdefaultvalue "finder" "detectorinitialbinning"      [config::getvalue nwfinderdetectorinitialbinning     ]
  config::setdefaultvalue "finder" "detectorunbinnedformat"      [config::getvalue nwfinderdetectorunbinnedformat     ]
  config::setdefaultvalue "finder" "coolersettemperature"        [config::getvalue nwfindercoolersettemperature       ]
  config::setdefaultvalue "finder" "filterwheeltype"             [config::getvalue nwfinderfilterwheeltype            ]
  config::setdefaultvalue "finder" "filterwheelidentifier"       [config::getvalue nwfinderfilterwheelidentifier      ]
  config::setdefaultvalue "finder" "filterwheelinitialposition"  [config::getvalue nwfinderfilterwheelinitialposition ]
  config::setdefaultvalue "finder" "focusertype"                 [config::getvalue nwfinderfocusertype                ]
  config::setdefaultvalue "finder" "focuseridentifier"           [config::getvalue nwfinderfocuseridentifier          ]
  config::setdefaultvalue "finder" "focuserinitialposition"      [config::getvalue nwfinderfocuserinitialposition     ]
  config::setdefaultvalue "finder" "pointingmodelparameters"     [config::getvalue nwfinderpointingmodelparameters    ]
  config::setdefaultvalue "finder" "isstandalone"                [config::getvalue nwfinderisstandalone               ]

  package require finderserver
  finderserver::start
}
