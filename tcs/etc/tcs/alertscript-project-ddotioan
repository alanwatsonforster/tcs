type="$1"
eventidentifier="$2"
targetidentifier="$3"

timestamp="$(date +"%Y-%m-%d %H:%M.%S")"

priority=""
case $type in
lvc*)
  priority="emergency"
  url="https://gracedb.ligo.org/superevents/$eventidentifier"
  group="gw-group"
  ;;
fermilat*)
  priority="emergency"
  url="https://gcn.gsfc.nasa.gov/other/$targetidentifier.fermi"
  group="grb-group"
  ;;
fermi*)
  priority="normal"
  url="https://gcn.gsfc.nasa.gov/other/$targetidentifier.fermi"
  group="grb-group"
  ;;
swift*)
  priority="normal"
  url="https://gcn.gsfc.nasa.gov/other/$targetidentifier.swift"
  group="grb-group"
  ;;
esac

if test "$priority" != ""
then
  echo "$timestamp: DDOTI/OAN has received a $type GCN Notice for $eventidentifier (target $targetidentifier)." |
  sendpushover \
    -P "$priority" \
    -U "$url" \
    -s "DDOTI/OAN $identifier: $type" \
    "$group"
fi

exit 0
