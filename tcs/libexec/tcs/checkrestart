export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin

mkdir -p "$tcsprefix"/var/tcs/restart
cd "$tcsprefix"/var/tcs/restart

# Get the unqualified host name and remove any prefix before "-".
host="$(uname -n | sed 's/\..*//;s/[^-]*-//')"

if test -f "$host"
then
  rm -f "$host"
  sleep 10
  tcs stopserver -a
  tcs startserver -a
else
  # We are not on the main host.
  rsync -a --timeout=10 --include="$host" --exclude="*" --remove-source-files rsync://services/tcs/restart/. .
  if test -f "$host"
  then
    rm -f "$host"
    tcs stopserver -a
    sleep 30
    tcs startserver -a
  fi
fi

exit 0
