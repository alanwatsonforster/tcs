export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin

# Try to work even if $tcsprefix is read-only.
if test ! -w "$tcsprefix"
then
  tcsprefix=/run
fi

mkdir -p "$tcsprefix"/var/tcs/reboot
cd "$tcsprefix"/var/tcs/reboot

# Get the unqualified host name and remove any prefix before "-".
host="$(uname -n | sed 's/\..*//;s/[^-]*-//')"

# The sleep below aim to ensure that the log server stops after the
# other servers have stopped.

if test -f "$host"
then
  # We are on the main host, which runs the log server.
  sleep 10
  tcs log "tcs checkreboot" summary "rebooting $host."
  rm -f "$host"
  sleep 1
  shutdown -r now
else
  # We are not on the main host.
  rsync -a --timeout=10 --include="$host" --exclude="*" --remove-source-files rsync://services/tcs/reboot/. .
  if test -f "$host"
  then
    tcs log "tcs checkreboot" summary "rebooting $host."
    rm -f "$host"
    sleep 1
    shutdown -r now
  fi
fi

exit 0
