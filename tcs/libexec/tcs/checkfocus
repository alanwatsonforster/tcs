export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

program=$(basename "$0")

usageerror () {
  echo 1>&2 "usage: $program [-e etcdir] [-s section] [--] fitsfile ..."
  exit 1
}

optstring=e:s:P:
etcdir=/usr/local/etc/tcs
section=""
plotfile=""
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -q -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -e)
    etcdir="$2"
    shift 2
    ;;
  -s)
    section="$2"
    shift 2
    ;;
  -P)
    plotfile="$2"
    shift 2
    ;;
  *)
    usageerror
    ;;
  esac
done
shift
if test $# = 0
then
  usageerror
fi

exec 3>&1

for fitsfile in "$@"
do
  echo $(fitsheadervalue SSCRQZ0 "$fitsfile") $(
    if test -z "$section"
    then
      fitsfwhm -e "$etcdir" -- "$fitsfile"
    else
      fitsfwhm -e "$etcdir" -s "$section" -- "$fitsfile"
    fi
  ) "$fitsfile"
done | tee /dev/fd/3 | 
if test -z "$plotfile"
then
  fitfocus -v
else
  fitfocus -v -P "$plotfile"
fi
