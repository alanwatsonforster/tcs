export PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin

sudo -v

program="tcs $(basename "$0")"

export TCSLOGTOSTDERR=true

host=$(uname -n | sed 's/\..*//' | tr '[A-Z]' '[a-z]')
case $host in
*-services|colibricito-control)
  ;;
*)
  echo 1>&2 "$program: error: must run on the services host." 
  exit 1
  ;;
esac

sudo mkdir -p "$tcsprefix"/var/tcs/halt
cd "$tcsprefix"/var/tcs/halt

if test $# = 0
then
  case "$host" in
  coatlicu-*)
    set control instrument
    ;;
  coatlioan-services)
    set services control platform instrument
    ;;
  ddotioan-services)
    set services control platform instrument0 instrument1
    ;;
  ratiroan-services)
    set services control detectors tcs-a
    ;;
  colibricito-*)
    set control
    ;;
  *)
    echo 2>&1 "$program: error: unknown host."
    exit 1
    ;;
  esac
fi

for host in "$@"
do
  tcs log "tcs haltsoon" summary "requesting halt of $host."
  sudo touch "$host"
done

exit 0
