#\
umask 0; PATH=/usr/local/opt/tcl-tk/bin:$PATH exec tclsh8.6 -encoding "utf-8" "$0" ${1+"$@"}

set env("logtostderronly") "true"

source [file join $::env(tcsprefix) "lib" "tcs" "packages.tcl"]

package provide "selectorclient" 0.0
namespace eval "selectorclient" {

  proc request {request} {
    puts "selector: request: $request"
  }

}

package provide "server" 0.0
namespace eval "server" {

  proc setdata {key value} {
  }

}

package require "gcntan"

namespace eval "gcntan" {

  while {[gets stdin line] > 0} {
    puts $line
    if {[llength $line] != 46} {
      log::error "invalid line."
    } else {
      set timestamp "[lindex $line 0] [lindex $line 1]"
      set packet [lrange $line 6 end]
      gcntan::processpacket $timestamp $packet
    }
  }

}