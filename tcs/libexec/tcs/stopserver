export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

libexecdir="$tcsprefix/libexec/tcs"
program="tcs $(basename "$0")"

usageerror () {
  echo 1>&2 "usage: $program [--] servername [...]"
  echo 1>&2 "usage: $program [-a] [--]"
  exit 1
}

host=$(uname -n | sed 's/\..*//' | tr '[A-Z]' '[a-z]')
case "$host" in
ratiroan-services)
  allargs="gcntan html log"
  ;;
ratiroan-control)
  allargs="supervisor selector executor instrument telescope guider sefinder nefinder mount shutters secondary lights inclinometers dome covers weather moon sun target power sensors cryostat"
  ;;
ratiroan-detectors)
  allargs="C1 C0"
  ;;
ratiroan-tcs-a)
  allargs="C2 C3"
  ;;
coatlioan-services)
  allargs="gcntan html log"
  ;;
coatlioan-control)
  allargs="sensors power supervisor selector executor telescope mount enclosure secondary weather sun moon target"
  ;;
coatlioan-instrument)
  allargs="instrument C0"
  ;;
coatlioan-platform)
  allargs="heater lights"
  ;;
ddotioan-services)
  allargs="gcntan html log"
  ;;
ddotioan-control)
  allargs="sensors power supervisor selector executor instrument telescope mount enclosure weather sun moon target"
  ;;
ddotioan-a0)
  allargs=""
  ;;
ddotioan-platform)
  allargs="heater lights"
  ;;
ddotioan-instrument0)
  allargs="C2 C4"
  ;;
ddotioan-instrument1)
  allargs="C1 C3"
  ;;
colibricito)
  allargs="selector mount weather sun moon target html log"
  ;;
colibriohp-services)
  allargs="selector executor instrument telescope mount secondary covers telescopecontroller sun moon target weather plc power sensors html log"
  ;;
colibriohp-control)
  allargs="selector executor instrument telescope mount seconday covers plc telescopecontroller sun moon target weather power sensors"
  ;;
colibriohp-detectors)
  allargs="C0"
  ;;
transientscu-control)
  allargs="supervisor selector executor instrument telescope C0 weather sensors sun moon target gcntan html log"
  ;;
coatlicu-control)
  allargs="supervisor selector executor telescope weather sensors sun moon target html log"
  ;;
coatlicu-instrument)
  allargs="instrument C0"
  ;;
test-control)
  allargs="supervisor selector executor instrument telescope C0 weather sensors sun moon target gcntan html log"
  ;;
esac

optstring=a
all=false
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -a)
    all=true
    shift 1
    ;;
  *)
    usageerror
    ;;
  esac
done
shift

if $all && test $# != 0
then
  usageerror
elif ! $all && test $# = 0
then
  usageerror
fi

if $all
then
  set -- $allargs
fi

for arg in "$@"
do
  fullserver="$libexecdir"/${arg}server
  pids=$(pgrep -u root -f $fullserver)
  if test ! -z "$pids"
  then
    kill $pids
  fi
  pids=$(pgrep -u root -f $fullserver)
  if test ! -z "$pids"
  then
    kill -KILL $pids
  fi
done
