ServerAdmin alan@astro.unam.mx
ServerName ddoti.astrossp.unam.mx

<Directory @prefix@/var/www/>
  Options Indexes FollowSymLinks
  AllowOverride None
  Require all granted
</Directory>

<Directory "@prefix@/var/www/tcs">
  AllowOverride None
  Options +ExecCGI -MultiViews
  AddHandler cgi-script cgi
  Require all granted
</Directory>

<VirtualHost *:80>

  ServerName ddoti.astrossp.unam.mx
  DocumentRoot /usr/local/var/www/

  ############################################################

  <LocationMatch ^/>
    Deny from All
    Allow from 132.248.1
    Allow from 132.248.3
    Allow from 132.248.4
    Allow from 100.
    Allow from 10.0.1
    Allow from 192.168
    Allow from 127.0.0
    Allow from ::1
  </LocationMatch>

  <LocationMatch ^/tcs/>
    Deny from All
    Allow from 132.248.4
    Allow from 100.
    Allow from 10.0.1
    Allow from 192.168
    Allow from 127.0.0
    Allow from ::1
    AuthType Basic
    AuthName "DDOTI Operations"
    AuthUserFile @prefix@/etc/htpasswd/ddoti-operations
    Require valid-user
  </LocationMatch>

  <Location "/tcs/engineering.html">
    AuthType Basic
    AuthName "DDOTI Engineering"
    AuthUserFile @prefix@/etc/htpasswd/ddoti-engineering
    Require valid-user
  </Location>

  <LocationMatch "^/proxy/">
    AuthType Basic
    AuthName "DDOTI Engineering"
    AuthUserFile @prefix@/etc/htpasswd/ddoti-engineering
    Require valid-user
  </LocationMatch>

  ############################################################
  
  <Location /proxy/ibb-127/>
    ProxyPass         http://ibb-127/
    ProxyPassReverse  /
  </Location>

  <Location /proxy/ibb-220/>
    ProxyPass         http://ibb-220/
    ProxyPassReverse  /
  </Location>

  <Location /proxy/mount/>
    ProxyPass         http://mount/
    ProxyPassReverse  /
  </Location>

  ############################################################

</VirtualHost>

ErrorLog ${APACHE_LOG_DIR}/error.log
CustomLog ${APACHE_LOG_DIR}/access.log combined
