ServerAdmin alan@astro.unam.mx
ServerName colibricito

<Directory @prefix@/var/www/>
  Options Indexes FollowSymLinks
  AllowOverride None
  Require all granted
</Directory>

<Directory "@prefix@/var/www/tcs">
  AllowOverride None
  Options +ExecCGI -MultiViews
  AddHandler cgi-script cgi
  Require all granted
</Directory>

<VirtualHost *:80>

  ServerName colibricito
  DocumentRoot /usr/local/var/www/

  ############################################################

  <LocationMatch ^/>
    Deny from All
    Allow from 192.168.130
    Allow from 192.168.100
    Allow from 127.0.0
    Allow from ::1
  </LocationMatch>

  <LocationMatch ^/(tcs|proxy)/>
    AuthType Basic
    AuthName "OHP COLIBRICITO Web Site"
    AuthUserFile @prefix@/etc/htpasswd/colibricito
    Require valid-user
    Deny from All
    Allow from 192.168
    Allow from 127.0.0
    Allow from ::1
  </LocationMatch>

  ############################################################
  
  <Location /proxy/mount/>
    ProxyPass         http://mount/
    ProxyPassReverse  /
  </Location>

  ############################################################

</VirtualHost>

ErrorLog ${APACHE_LOG_DIR}/error.log
CustomLog ${APACHE_LOG_DIR}/access.log combined
