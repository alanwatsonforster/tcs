program=$(basename "$0")

usageerror () {
  echo "usage: $program [-v] [-s speed] [--] serial ..."
  exit 3
}

speed=""

optstring="vs:"
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -s)
    speed="$2"
    shift 2
    ;;
  -v)
    shift
    ;;
  *)
    usageerror
    ;;
  esac
done
shift
case "$#" in
0)
  usageerror
  ;;
esac

for serial in "$@"
do
  for dir in /sys/bus/usb/devices/*
  do
    if grep -Fx "$serial" $dir/serial >/dev/null
    then
      break
    fi
  done
  if ! grep -Fx "$serial" $dir/serial >/dev/null
  then
    echo "USB CRITICAL - $serial is not present."
    exit 2
  fi
done

if test ! -z "$speed"
then
  for serial in "$@"
  do
    for dir in /sys/bus/usb/devices/*
    do
      if grep -Fx "$serial" $dir/serial >/dev/null
      then
        break
      fi
    done
    if ! grep -Fx "$speed" $dir/speed >/dev/null
    then
      echo "USB WARNING - $serial - $(cat $dir/speed) Mb/s."
      exit 1
    fi
  done
fi

if test -z "$speed"
then
  echo "USB OK - $@."
else
  echo "USB OK - $@ - $(cat $dir/speed) Mb/s."
fi
exit 0
