line=$(mount | grep "/var/ow")
if test "$line" = "OWFS on /var/ow type fuse.OWFS (rw,nosuid,nodev,allow_other)"
then
  echo OWFS OK - /var/ow.
  exit 0
else
  echo OWFS CRITICAL - /var/ow.
  exit 2
fi
