line=$(mount | grep "/data1")
if test "$line" = "irpc:/data1 on /data1 type nfs (rw,rsize=8192,wsize=8192,timeo=14,intr,nolock,addr=192.168.0.141)"
then
  echo DATA1_MOUNT OK - /data1.
  exit 0
else
  echo DATA1_MOUNT CRITICAL - /data1.
  exit 2
fi
